@model ProfileModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yapay Zeka Önersin<a asp-area="" asp-controller="AskToAi" asp-action="AiQueries" class="btn btn-default-small float-end">Geçmiş Öneriler</a></h2>
<div class="row">
    <div class="col-lg-6 col-12">
        <form method="post" asp-area="" asp-controller="AskToAi" asp-action="Index">
            <div class="mb-2">
                <b><label asp-for="Face" class="form-label" for="Hair"></label></b>
                <select asp-for="Face" asp-items="@ViewBag.FaceTypes" class="form-control">
                    <option value="">Yüz yapınızı seçiniz</option>
                </select>
            </div>

            <div class="mb-2">
                <b><label asp-for="Hair" class="form-label" for="Hair"></label></b>
                <select asp-for="Hair" asp-items="@ViewBag.HairTypes" class="form-control">
                    <option value="">Saç tipinizi seçiniz</option>
                </select>
            </div>

            <div class="mb-2">
                <b><label asp-for="HairLength" class="form-label" for="HairLength"></label></b>
                <select asp-for="HairLength" asp-items="@ViewBag.HairLengths" class="form-control">
                    <option value="">Saç uzunluğu seçiniz</option>
                </select>
            </div>

            <div class="mb-2">
                <b><label asp-for="ForeheadJaw" class="form-label" for="ForeheadJaw"></label></b>
                <select asp-for="ForeheadJaw" asp-items="@ViewBag.ForeheadJaws" class="form-control">
                    <option value="">Alın çene yapınızı seçiniz</option>
                </select>
            </div>

            <div class="mb-2">
                <b><label asp-for="Lifestyle" class="form-label" for="Lifestyle"></label></b>
                <select asp-for="Lifestyle" asp-items="@ViewBag.Lifestyles" class="form-control">
                    <option value="">Yaşam stili seçiniz</option>
                </select>
            </div>

            <div class="mt-3">
                <button class="btn btn-default-small" type="submit">Yapay zekaya gönder</button>
            </div>
        </form>
    </div>
    <div class="col-lg-6 col-12">
        <div class="row">
            <h5>Yüz Tipleri</h5>
            <hr />
            <div class="col-4 text-center">
                <img src="~/img/enumimg/Oval.png" />
                <b>Oval</b>
            </div>
            <div class="col-4 text-center">
                <img src="~/img/enumimg/Yuvarlak.png" />
                <b>Yuvarlak</b>
            </div>
            <div class="col-4 text-center">
                <img src="~/img/enumimg/Kare.png" />
                <b>Kare</b>
            </div>
            <div class="col-4 text-center">
                <img src="~/img/enumimg/Uzun.png" />
                <b>Uzun</b>
            </div>
            <div class="col-4 text-center">
                <img src="~/img/enumimg/Kalp.png" />
                <b>Kalp Şeklinde</b>
            </div>
            <div class="col-4 text-center">
                <img src="~/img/enumimg/Elmas.png" />
                <b>Elmas</b>
            </div>
        </div>
    </div>
</div>
